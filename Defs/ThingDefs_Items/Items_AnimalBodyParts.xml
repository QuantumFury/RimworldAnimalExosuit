<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="BodyPartBaseADS" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>0.7</Flammability>
			<Beauty>-4</Beauty>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<tickerType>Never</tickerType>
		<alwaysHaulable>true</alwaysHaulable>
		<isTechHediff>true</isTechHediff>
		<tradeTags>
			<li>BodyPlateAnimal</li>
		</tradeTags>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<pathCost>10</pathCost>
	</ThingDef>

	<ThingDef Name="BodyPartArtificialBaseADS" ParentName="BodyPartBaseADS" Abstract="True">
		<thingCategories>
			<li>BodyPlateAnimal</li>
		</thingCategories>
		<statBases>
			<DeteriorationRate>2.0</DeteriorationRate>
		</statBases>
	</ThingDef>

	<!-- simple prosthetics (industrial tech) -->

	

	<!-- bionics (spacer tech) -->

	<ThingDef Name="BodyPartBionicBaseADS" ParentName="BodyPartProstheticBaseADS" Abstract="True">
		<graphicData>
			<texPath>Things/Item/BodyPart/AnimalBodyPart_bionic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<recipeMaker>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<researchPrerequisite>AnimalBionicExosuit</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	<!-- =============== Other Parts =============== -->

	

	<ThingDef ParentName="BodyPartBionicBaseADS">
		<defName>BionicAnimalExosuit</defName>
		<label>bionic animal exosuit</label>
		<description>A bionically enhanced exosuit integrated within the skin and muscles of an animal. Dramatically improves manipulation and movement, and provides protection equivalent to human marine armour.</description>
		<techLevel>Spacer</techLevel>
		<graphicData>
			<texPath>Things/Item/BodyPart/AnimalBodyPart</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<costList>
			<Plasteel>30</Plasteel>
			<ComponentSpacer>2</ComponentSpacer>
			<Synthread>20</Synthread>
		</costList>
		<statBases>
			<WorkToMake>18000</WorkToMake>
			<Mass>1</Mass>
		</statBases>
		<techHediffsTags>
			<li>Advanced</li>
		</techHediffsTags>
	</ThingDef>

	
</Defs>
